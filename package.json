{
  "name": "@oax/server",
  "description": "OAX Trustless Server",
  "version": "0.3.6",
  "author": "OAX Foundation",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "make contracts && tsc -d -p ./tsconfig.json && build-packages",
    "build-docker": "pnpm run clean-build && docker_build.sh",
    "check-format": "prettier --list-different '**/*.ts' 'src/client/**/*.js'",
    "clean": "clean_build.sh",
    "clean-build": "pnpm run clean; pnpm run build",
    "cov": "pnpm run clean-build && jest --coverage --runInBand build/dist",
    "docs": "docs_build.sh",
    "format": "prettier --write '**/*.ts' 'src/client/**/*.js'",
    "lint": "tslint -p tsconfig.json",
    "start": "pnpm run clean-build && start.sh",
    "start-docker": "pnpm run build-docker && start.sh --docker",
    "test": "pnpm run clean-build && pnpm recursive install && jest --runInBand build/dist",
    "unit": "pnpm run clean-build && pnpm recursive install && jest build/dist --runInBand --testPathIgnorePatterns SystemFixture integration e2e"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OAXFoundation/l2x-trustless-exchange"
  },
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@oax/client": "*",
    "@oax/common": "*",
    "@types/body-parser": "1.17.0",
    "@types/dotenv": "6.1.0",
    "@types/ethereumjs-abi": "0.6.1",
    "@types/ethereumjs-util": "5.2.0",
    "@types/express": "4.16.0",
    "@types/istanbul-lib-coverage": "^2.0.0",
    "@types/jest": "24.0.11",
    "@types/jsonapi-serializer": "3.6.1",
    "@types/lolex": "2.1.3",
    "@types/nock": "9.3.0",
    "@types/node": "10.12.30",
    "@types/ramda": "0.25.42",
    "@types/uuid": "3.4.4",
    "@types/web3-provider-engine": "14.0.0",
    "@types/yargs": "13.0.0",
    "async-child-process": "1.1.1",
    "babel-core": "^6.26.3",
    "babel-jest": "24.7.1",
    "babel-plugin-istanbul": "5.1.1",
    "babel-preset-jest": "24.6.0",
    "bn.js": "4.11.8",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "husky": "1.2.0",
    "javascript-typescript-langserver": "^2.11.1",
    "jest": "24.7.1",
    "jest-haste-map": "24.7.1",
    "jsverify": "^0.8.4",
    "lolex": "3.0.0",
    "mocha": "6.1.4",
    "nock": "10.0.3",
    "prettier": "1.15.3",
    "sleep": "6.1.0",
    "solium": "1.2.3",
    "supertest-fetch": "1.2.2",
    "ts-jest": "24.0.2",
    "ts-mockito": "2.3.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typechain": "0.3.9",
    "typedoc": "0.13.0",
    "typedoc-plugin-markdown": "2.0.4",
    "typescript": "3.4.3",
    "web3": "1.0.0-beta.55",
    "web3-provider-engine": "14.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "packageJson": "package.json"
      }
    },
    "preset": "ts-jest",
    "testMatch": [
      "**/build/dist/tests/**/*.test.js",
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "flycheck_",
      "d.ts"
    ],
    "watchPathIgnorePatterns": [
      "flycheck_",
      "d.ts"
    ],
    "setupFilesAfterEnv": [
      "./config/tests/test_framework_setup.js"
    ],
    "globalSetup": "./config/tests/global_setup.js",
    "modulePathIgnorePatterns": [
      "<rootDir>/src",
      "<rootDir>/build/client"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "check-format-modified-files"
    }
  },
  "dependencies": {
    "ajv": "6.6.2",
    "await-outside": "2.1.2",
    "bignumber.js": "8.1.1",
    "bluebird": "3.5.4",
    "body-parser": "1.18.3",
    "colors": "1.3.3",
    "cross-fetch": "2.2.3",
    "dotenv": "6.2.0",
    "ethereumjs-abi": "0.6.5",
    "ethereumjs-util": "6.0.0",
    "ethers": "4.0.27",
    "eventemitter3": "3.1.0",
    "express": "4.16.4",
    "get-stdin": "6.0.0",
    "jsonapi-serializer": "3.6.4",
    "keythereum": "1.0.4",
    "knex": "0.17.6",
    "logform": "1.10.0",
    "minimist": "1.2.0",
    "moment": "2.24.0",
    "path-to-regexp": "2.4.0",
    "prompt": "1.0.0",
    "promptly": "3.0.3",
    "ramda": "0.25.0",
    "readline-sync": "1.4.9",
    "shell-quote": "1.6.1",
    "sqlite3": "4.0.8",
    "ts-essentials": "1.0.2",
    "uuid": "3.3.2",
    "winston": "2.4.4"
  }
}
